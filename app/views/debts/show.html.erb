<%- model_class = Debt -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @debt.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @debt.body %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @debt.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @debt.date %></dd>
  <% unless @debt.creditor.nil? %>
  <dt><strong><%= model_class.human_attribute_name(:creditor) %>:</strong></dt>
  <dd><%= @debt.creditor.first_name %></dd>
  <% else %>
  <dt><strong><%= model_class.human_attribute_name(:debtor) %>:</strong></dt>
  <dd><%= @debt.debtor.first_name %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              debts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_debt_path(@debt), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              debt_path(@debt),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
