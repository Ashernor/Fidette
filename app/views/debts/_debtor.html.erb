<% unless @debts.blank? %>
<div class="page-header">
  <h1>Mes dettes</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Petit surnom</th>
    <th>Texte de rappel</th>
    <th>Valeur</th>
    <th>Date de la créance</th>
    <th>Nom du créancier</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.title %></td>
        <td><%= debt.body %></td>
        <td><%= debt.value %>€</td>
        <td><%= debt.date %></td>
        <td><%= debt.creditor.first_name %> <%= debt.creditor.last_name %></td>
        <td>
          <%= link_to t('.edit', :default => "Editer"),
                      edit_debt_path(debt, type:"debt"), :class => 'btn btn-mini'%>
          <%= link_to t('.edit', :default => "Payer" ),
                      solve_debt_path(debt),
                      :method => :put,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Êtes-vous sûr d\'avoir payé cette dette ?')) },
                      :class => 'btn btn-mini' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<div class="well">
  La chance ! Actuellement, vous ne devez de l'argent à personne.
</div>
<% end %>
<h1>Mes dettes passées</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Petit surnom</th>
    <th>Texte de rappel</th>
    <th>Valeur</th>
    <th>Date de la créance</th>
    <th>Nom du créancier</th>
  </tr>
  </thead>
  <tbody>
  <% @old_debts.each do |debt| %>
      <tr>
        <td><%= debt.title %></td>
        <td><%= debt.body %></td>
        <td><%= debt.value %>€</td>
        <td><%= debt.date %></td>
        <td><%= debt.creditor.first_name %> <%= debt.creditor.last_name %></td>
      </tr>
  <% end %>
  </tbody>
</table>