<h1>Connexion</h1>

<%= form_tag sessions_path, :class => "form-horizontal" do %>
    <div class="control-group">
      <%= label_tag :email, "Email", class: "control-label" %>
      <div class="controls">
        <%= text_field_tag :email, params[:email] %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :password, "Mot de passe", class: "control-label" %>
      <div class="controls">
        <%= password_field_tag :password %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
            <%= check_box_tag :remember_me, 1, params[:remember_me] %> Se souvenir de moi
        </label>
        <%= submit_tag "Se connecter", class: "btn" %>
      </div>
    </div>
<% end %>

<div class="well">
  Pas encore de compte ? <a href="/signup">Je passe par ici pour m'inscrire.</a>
</div>